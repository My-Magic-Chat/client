{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "ES6",
    "outDir": "dist",
    "module": "ESNext",
    "declarationDir": "src",
    "moduleResolution": "node",
    "paths": {
      "@mocks/*": [
        "__mocks__/*"
      ],
      "@i18n": [
        "src/shared/i18n"
      ],
      "@hook/*": [
        "src/shared/hook/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@fragments/*": [
        "src/fragments/*"
      ],
      "@animations": [
        "src/animations"
      ]
    },
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/",
    "types/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/stories/**",
    "**/__mocks__",
    "**/tests",
    "**/*.(test|spec).tsx"
  ]
}