{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "ES6",
    "outDir": "dist",
    "module": "ESNext",
    "declarationDir": "types",
    "moduleResolution": "node",
    "paths": {
      "@mocks/*": [
        "__mocks__/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@animations": [
        "src/animations"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "**/tests",
    "**/*.(test|spec).tsx",
  ]
}