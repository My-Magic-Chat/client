{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "types": [
            "webpack-env",
            "jest",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "**/stories/**",
        "**/__mocks__",
        "**/tests",
        "**/*.(test|spec).tsx"
    ]
}